<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WorkoutTracker.Views.WorkoutPage"
    Title="Add Workout">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Add a Weightlifting Workout" 
                   FontSize="20" 
                   HorizontalOptions="Center" />

            <!-- Muscle Group Picker with a default prompt -->
            <Picker Title="Select Muscle Group"
                    ItemsSource="{Binding MuscleGroups}"
                    SelectedItem="{Binding SelectedMuscleGroup}" />

            <!-- Entry for exercise name search -->
            <Entry Placeholder="Type exercise name..."
                   Text="{Binding ExerciseSearchQuery}" />

            <!-- CollectionView for dynamic exercise suggestions -->
            <CollectionView ItemsSource="{Binding ExerciseSuggestions}"
                            SelectionMode="Single"
                            SelectionChanged="OnExerciseSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="5">
                            <Label Text="{Binding Name}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Fields for weight, reps, and sets -->
            <Entry Placeholder="Enter weight (lbs or kg)" 
                   Keyboard="Numeric" 
                   Text="{Binding Weight}" />
            <Entry Placeholder="Enter reps" 
                   Keyboard="Numeric" 
                   Text="{Binding Reps}" />
            <Entry Placeholder="Enter sets" 
                   Keyboard="Numeric" 
                   Text="{Binding Sets}" />

            <Button Text="Add Workout" 
                    Command="{Binding AddWorkoutCommand}" 
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
