<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkoutTracker.ViewModels"
             x:Class="WorkoutTracker.Views.WorkoutPlanDetailsPage"
             Title="{Binding SelectedPlan.Name}">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="{Binding SelectedPlan.Description}"
               FontSize="16"
               TextColor="Gray" />

        <Button Text="Start Plan"
                Command="{Binding StartPlanCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="8" />

        <CollectionView ItemsSource="{Binding Workouts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 8" Padding="10" Margin="0,0,0,10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Workout.Name}"
                                   FontAttributes="Bold"
                                   FontSize="18">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WorkoutPlanDetailsViewModel}}, Path=ToggleExpandCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <StackLayout IsVisible="{Binding IsExpanded}">
                                <Label Text="Muscle Group: {Binding Workout.MuscleGroup}" FontSize="14" />
                                <Label Text="Type: {Binding Workout.Type}" FontSize="14" />
                                <Label Text="Sets: {Binding Workout.Sets}  Reps: {Binding Workout.Reps}" FontSize="14" />
                                <Label Text="Gym Location: {Binding Workout.GymLocation}" FontSize="14" />
                            </StackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
