<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:WorkoutTracker.ViewModels"
    x:Class="WorkoutTracker.Views.AuthPage"
    Title="Welcome">

    <StackLayout Padding="20" Spacing="15">

        <!-- Segmented Control -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Button Text="Login"
                    Command="{Binding SwitchToLoginCommand}"
                    BackgroundColor="{Binding IsLoginMode, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Login'}"
                    TextColor="White" />
            <Button Text="Register"
                    Command="{Binding SwitchToRegisterCommand}"
                    BackgroundColor="{Binding IsLoginMode, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Register'}"
                    TextColor="White" />
        </StackLayout>

        <!-- Login / Register Form -->
        <ContentView>
            <ContentView.Content>
                <StackLayout Spacing="10">

                    <!-- Common Fields -->
                    <Entry Placeholder="Username" Text="{Binding Username}" />
                    <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />

                    <!-- Register-only Fields -->
                    <StackLayout IsVisible="{Binding IsRegisterMode}">
                        <Entry Placeholder="Name" Text="{Binding Name}" />
                        <Entry Placeholder="Email" Text="{Binding Email}" />
                        <Entry Placeholder="Age" Keyboard="Numeric" Text="{Binding Age}" />
                        <Entry Placeholder="Weight" Keyboard="Numeric" Text="{Binding Weight}" />
                    </StackLayout>

                    <!-- Submit Button -->
                    <Button x:Name="SubmitButton"
                        Text="{Binding SubmitButtonText}"
                        Command="{Binding SubmitCommand}"
                        IsEnabled="{Binding IsFormValid}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="LightBlue" />
                                        <Setter Property="TextColor" Value="White" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="LightGray" />
                                        <Setter Property="TextColor" Value="DarkGray" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Button>

                </StackLayout>
            </ContentView.Content>
        </ContentView>

    </StackLayout>
</ContentPage>
